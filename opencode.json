{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_newline": "return",
    "input_submit": "shift+return,ctrl+return,alt+return,ctrl+j"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${file:.secrets/CONTEXT7_API_KEY}"
      }
    },
    "mise": {
      "type": "local",
      "command": ["mise", "mcp"]
    }
  }
}
